<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.demo.mapper.ShopMapper">

    <resultMap type="Shop" id="baseMap">
        <id property="id" column="id" javaType="String" jdbcType="VARCHAR"/>
        <result property="shopName" column="shop_name" javaType="String" jdbcType="VARCHAR"/>
        <result property="plateform" column="plateform" javaType="String" jdbcType="VARCHAR"/>
        <result property="shopSellerId" column="shop_seller_id" javaType="String" jdbcType="VARCHAR"/>
    </resultMap>

    <select id="selectById" resultMap="baseMap">
        select * from shop where id=#{id}
    </select>
</mapper>